{
  "name": "work-time-left",
  "displayName": "Work Time Left",
  "description": "display work time left",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "version": "0.0.1",
  "author": "Bjorn Li <lxxorz@gmail.com>",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "./images/icon.png",
  "main": "./dist/index.js",
  "contributes": {
    "commands": [
      {
        "command": "work-time-left.setTime",
        "title": "Set Time"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Work Time Left",
      "properties": {
        "work-time-left.time": {
          "type": "string",
          "default": "18:49:00"
        },
        "work-time-left.textColor": {
          "type": "string",
          "default": "#4db051",
          "description": "Display Text Color"
        },
        "work-time-left.locale": {
          "type": "string",
          "enum": [
            "af",
            "ar",
            "ar-DZ",
